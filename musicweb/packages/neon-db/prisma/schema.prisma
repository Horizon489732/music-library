generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  USER
  ADMIN
}

enum Status {
  PENDING
  APPROVED
  REJECTED
}

model User {
  id                String   @id @default(uuid()) @unique
  fullName          String   @map("full_name")
  email             String   @unique
  password          String
  status            Status   @default(PENDING)
  role              Role     @default(USER)
  lastActivityDate  DateTime @map("last_activity_date") @default(now())
  createdAt         DateTime @map("created_at") @default(now())

  @@map("users")
}
